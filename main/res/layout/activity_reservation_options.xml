<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eduardo.pantallasproyecto2.ReservationOptionsActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realizar Reservación"
        android:layout_centerVertical="true"
        android:id="@+id/btn_makeReservation"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Reservación"
        android:layout_centerVertical="true"
        android:id="@+id/btn_searchReservation"
        android:layout_below="@id/btn_makeReservation"/>
</RelativeLayout>
